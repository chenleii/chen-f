<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.f.common.mapper.SysMenuMapper">
    
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chen.f.common.pojo.SysMenu">
        <id column="ID" property="id" />
        <result column="PARENT_ID" property="parentId" />
        <result column="NAME" property="name" />
        <result column="URL" property="url" />
        <result column="ICON" property="icon" />
        <result column="TYPE" property="type" />
        <result column="ORDER" property="order" />
        <result column="REMARK" property="remark" />
        <result column="STATUS" property="status" />
        <result column="UPDATED_SYS_USER_ID" property="updatedSysUserId" />
        <result column="CREATED_SYS_USER_ID" property="createdSysUserId" />
        <result column="UPDATED_DATE_TIME" property="updatedDateTime" />
        <result column="CREATED_DATE_TIME" property="createdDateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        `ID`,
        `PARENT_ID`,
        `NAME`,
        `URL`,
        `ICON`,
        `TYPE`,
        `ORDER`,
        `REMARK`,
        `STATUS`,
        `UPDATED_SYS_USER_ID`,
        `CREATED_SYS_USER_ID`,
        `UPDATED_DATE_TIME`,
        `CREATED_DATE_TIME`
        
    </sql>

    <!--根据ID列表查询当前记录和当前记录的所有下级记录-->
    <select id="selectSubordinateByIdList" resultMap="BaseResultMap">
        WITH recursive cte (
        <include refid="Base_Column_List"/>
        ) AS (
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        SYS_MENU
        WHERE
        ID IN
        <foreach collection="idList" item="item" open="(" close=")" separator=",">
            #{item,jdbcType=VARCHAR}
        </foreach>
        <if test="ew != null">
            <if test="ew.sqlSegment != null and ew.sqlSegment != '' and ew.nonEmptyOfNormal">
                AND ${ew.sqlSegment}
            </if>
        </if>
        UNION ALL
        SELECT
        SYS_MENU.`ID`,
        SYS_MENU.`PARENT_ID`,
        SYS_MENU.`NAME`,
        SYS_MENU.`URL`,
        SYS_MENU.`ICON`,
        SYS_MENU.`TYPE`,
        SYS_MENU.`ORDER`,
        SYS_MENU.`REMARK`,
        SYS_MENU.`STATUS`,
        SYS_MENU.`UPDATED_SYS_USER_ID`,
        SYS_MENU.`CREATED_SYS_USER_ID`,
        SYS_MENU.`UPDATED_DATE_TIME`,
        SYS_MENU.`CREATED_DATE_TIME`
        FROM
        SYS_MENU
        INNER JOIN cte ON cte.ID = SYS_MENU.PARENT_ID
        )
        SELECT
        <include refid="Base_Column_List"/>
        FROM cte
        <if test="ew != null">
            ${ew.customSqlSegment}
        </if>
    </select>

    <!--根据ID列表查询当前记录和当前记录的所有上级记录-->
    <select id="selectSuperiorByIdList" resultMap="BaseResultMap">
        WITH recursive cte (
        <include refid="Base_Column_List"/>
        ) AS (
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        SYS_MENU
        WHERE
        ID IN
        <foreach collection="idList" item="item" open="(" close=")" separator=",">
            #{item,jdbcType=VARCHAR}
        </foreach>
        <if test="ew != null">
            <if test="ew.sqlSegment != null and ew.sqlSegment != '' and ew.nonEmptyOfNormal">
                AND ${ew.sqlSegment}
            </if>
        </if>
        UNION ALL
        SELECT
        SYS_MENU.`ID`,
        SYS_MENU.`PARENT_ID`,
        SYS_MENU.`NAME`,
        SYS_MENU.`URL`,
        SYS_MENU.`ICON`,
        SYS_MENU.`TYPE`,
        SYS_MENU.`ORDER`,
        SYS_MENU.`REMARK`,
        SYS_MENU.`STATUS`,
        SYS_MENU.`UPDATED_SYS_USER_ID`,
        SYS_MENU.`CREATED_SYS_USER_ID`,
        SYS_MENU.`UPDATED_DATE_TIME`,
        SYS_MENU.`CREATED_DATE_TIME`
        FROM
        SYS_MENU
        INNER JOIN cte ON cte.PARENT_ID = SYS_MENU.ID
        )
        SELECT
        <include refid="Base_Column_List"/>
        FROM cte
        <if test="ew != null">
            ${ew.customSqlSegment}
        </if>
    </select>

</mapper>
